@page
@{
    ViewData["Title"] = "- Kontakt";
}

<div class="container mt-4">
    <h1 class="mb-4">Kontakt</h1>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Skontaktuj się z nami</h3><br>
            <form>
                <div class="form-group">
                    <label for="name">Imię i nazwisko</label>
                    <input type="text" class="form-control" id="name" placeholder="Wprowadź imię i nazwisko">
                </div><br>
                <div class="form-group">
                    <label for="email">Adres email</label>
                    <input type="email" class="form-control" id="email" placeholder="Wprowadź adres email">
                </div><br>
                <div class="form-group">
                    <label for="message">Wiadomość</label>
                    <textarea class="form-control" id="message" rows="3" placeholder="Wprowadź wiadomość"></textarea>
                </div><br>
                <button type="submit" class="btn btn-primary">Wyślij</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Nasze dane kontaktowe</h3>
            <p><strong>Nazwa firmy:</strong> CalcMajster Sp. z o.o.</p>
            <p><strong>Adres:</strong> Złota 4, Warszawa, 02-123</p>
            <p><strong>Telefon:</strong> +48 123 456 789</p>
            <p><strong>Email:</strong> kontakt@calcmajster.pl</p>
        </div>
    </div>
</div>
